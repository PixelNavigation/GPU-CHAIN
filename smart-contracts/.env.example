# Environment Configuration for GPU Chain Smart Contracts

# Private key for deployment (DO NOT COMMIT TO GIT)
PRIVATE_KEY=your_private_key_here

# Tenderly Configuration
TENDERLY_PROJECT=your_tenderly_project
TENDERLY_USERNAME=your_tenderly_username  
TENDERLY_FORK_ID=your_fork_id

# RPC URLs
POLYGON_RPC_URL=https://polygon-rpc.com/
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id
INFURA_PROJECT_ID=your_infura_project_id

# API Keys for verification
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key

# Gas reporting
REPORT_GAS=true
